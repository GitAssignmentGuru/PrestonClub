@model PrestonClub.Models.SponserList

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal amount = 0;
}

<h2>Sponser Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Total Amateur Sponsored
        </dt>

        <dd>
            @Model.AmateurSponserDetails.Count()
        </dd>

        <dt>
            Total Amount
        </dt>

        <dd>
            @foreach (var info in Model.AmateurSponserDetails)
            {
                amount = 0;
                amount += Convert.ToDecimal(info.SponsorAmount);
            }
            @amount;
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
